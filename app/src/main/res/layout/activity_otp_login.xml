<?xml version="1.0" encoding="UTF-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="otpLoginVM" type="com.huiospayapplication.app.modules.otplogin.data.viewmodel.OtpLoginVM"/>
    </data>
    <LinearLayout android:gravity="center_horizontal"
        android:id="@+id/linearColumnback"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/_37pxv"
        android:layout_width="match_parent"
        android:orientation="vertical" style="@style/groupStylewhite_A700">
        <LinearLayout android:id="@+id/linearOTPLogin"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:orientation="vertical" style="@style/groupStylewhite_A700">
            <TextView android:ellipsize="end" android:id="@+id/txtBack"
                android:layout_gravity="start"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_29pxh"
                android:layout_marginStart="@dimen/_29pxh"
                android:layout_width="wrap_content"
                android:singleLine="true"
                android:text="@{otpLoginVM.otpLoginModel.txtBack}"
                style="@style/txtWorkSanssemibold12" tools:text="@string/lbl_back"/>
            <ImageView android:id="@+id/imageGroup"
                android:layout_gravity="center_horizontal"
                android:layout_height="@dimen/_188pxh"
                android:layout_marginEnd="@dimen/_29pxh"
                android:layout_marginStart="@dimen/_29pxh"
                android:layout_marginTop="@dimen/_84pxv"
                android:layout_width="@dimen/_155pxh"
                android:scaleType="fitXY"
                android:src="@drawable/img_group_188x155"
                tools:ignore="ContentDescription" tools:src="@drawable/img_group_188x155"/>
            <TextView android:ellipsize="end"
                android:id="@+id/txtLoginwithOTP"
                android:layout_gravity="center_horizontal"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_29pxh"
                android:layout_marginStart="@dimen/_29pxh"
                android:layout_marginTop="@dimen/_50pxv"
                android:layout_width="wrap_content"
                android:singleLine="true"
                android:text="@{otpLoginVM.otpLoginModel.txtLoginwithOTP}"
                style="@style/txtWorkSanssemibold24" tools:text="@string/lbl_login_with_otp"/>
            <TextView android:gravity="center_horizontal"
                android:id="@+id/txtDescription"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_29pxh"
                android:layout_marginStart="@dimen/_29pxh"
                android:layout_marginTop="@dimen/_4pxv"
                android:layout_width="match_parent"
                android:text="@{otpLoginVM.otpLoginModel.txtDescription}"
                style="@style/txtWorkSansregular12" tools:text="@string/msg_please_enter_th2"/>
            <ImageView android:id="@+id/imageGroupSixteen"
                android:layout_gravity="center_horizontal"
                android:layout_height="@dimen/_87pxh"
                android:layout_marginEnd="@dimen/_29pxh"
                android:layout_marginStart="@dimen/_29pxh"
                android:layout_marginTop="@dimen/_17pxv"
                android:layout_width="@dimen/_236pxh"
                android:scaleType="fitXY"
                android:src="@drawable/img_group16"
                tools:ignore="ContentDescription" tools:src="@drawable/img_group16"/>
            <FrameLayout android:gravity="start"
                android:id="@+id/frameStackgroupOne"
                android:layout_height="@dimen/_242pxv"
                android:layout_marginTop="@dimen/_4pxv" android:layout_width="match_parent">
                <ImageView android:id="@+id/imageGroupOne"
                    android:layout_gravity="bottom|start"
                    android:layout_height="@dimen/_219pxh"
                    android:layout_marginEnd="@dimen/_10pxh"
                    android:layout_marginTop="@dimen/_10pxv"
                    android:layout_width="@dimen/_37pxh"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_group_18"
                    tools:ignore="ContentDescription" tools:src="@drawable/img_group_18"/>
                <ImageView android:id="@+id/imageGroupTwo"
                    android:layout_gravity="top|end"
                    android:layout_height="@dimen/_219pxh"
                    android:layout_marginBottom="@dimen/_10pxv"
                    android:layout_marginStart="@dimen/_10pxh"
                    android:layout_width="@dimen/_36pxh"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_group_19"
                    tools:ignore="ContentDescription" tools:src="@drawable/img_group_19"/>
                <androidx.appcompat.widget.AppCompatButton
                    android:ellipsize="end" android:gravity="center"
                    android:id="@+id/btnLogin"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_40pxv"
                    android:layout_marginEnd="@dimen/_34pxh"
                    android:layout_marginStart="@dimen/_34pxh"
                    android:layout_marginTop="@dimen/_40pxv"
                    android:layout_width="match_parent"
                    android:paddingBottom="@dimen/_15pxv"
                    android:paddingEnd="@dimen/_30pxh"
                    android:paddingStart="@dimen/_30pxh"
                    android:paddingTop="@dimen/_15pxv"
                    android:singleLine="true"
                    android:text="@string/lbl_login"
                    android:textAllCaps="false"
                    style="@style/btnSolidRounded_1" tools:text="@string/lbl_login"/>
                <TextView android:ellipsize="end"
                    android:id="@+id/txtOTPexpiresin"
                    android:layout_gravity="top|center"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_12pxv"
                    android:layout_marginEnd="@dimen/_119pxh"
                    android:layout_marginStart="@dimen/_119pxh"
                    android:layout_marginTop="@dimen/_12pxv"
                    android:layout_width="wrap_content"
                    android:singleLine="true"
                    android:text="@{otpLoginVM.otpLoginModel.txtOTPexpiresin}"
                    style="@style/txtWorkSansregular12" tools:text="@string/msg_otp_expires_in"/>
                <TextView android:ellipsize="end"
                    android:gravity="start"
                    android:id="@+id/txtGroupSeventeen"
                    android:layout_gravity="top|center"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_48pxv"
                    android:layout_marginEnd="@dimen/_34pxh"
                    android:layout_marginStart="@dimen/_34pxh"
                    android:layout_marginTop="@dimen/_48pxv"
                    android:layout_width="match_parent"
                    android:paddingBottom="@dimen/_4pxv"
                    android:paddingStart="@dimen/_30pxh"
                    android:paddingTop="@dimen/_4pxv"
                    android:singleLine="true"
                    android:text="@{otpLoginVM.otpLoginModel.txtGroupSeventeen}"
                    style="@style/txtSolidRounded" tools:text="@string/msg_didn_t_receive"/>
            </FrameLayout>
        </LinearLayout>
    </LinearLayout>
</layout>
